---
import BaseLayout from "../layouts/BaseLayout.astro";
import Img from "../elements/Img.astro";
import Picture from "../elements/Picture.astro";
---

<BaseLayout pageMeta="home" pageData="home">
  <!-- body内の要素 -->
  <Img
    srcPaths={["pc.jpg"]}
    format="webp"
    quality={85}
    loading="eager"
    alt=""
  />
  <Picture
    srcPaths={["pc.jpg", "sp.jpg"]}
    format="webp"
    quality={85}
    loading="eager"
  />
  <Picture 
      srcPaths={['pc.jpg', 'sp.jpg']} 
      format="webp" 
      quality={85} 
      loading="eager" 
      pictureAttributes={{ "data-item": 'pictrue' }} 
      imgAttributes={{ "data-item": 'img' }} 
    />
</BaseLayout>
